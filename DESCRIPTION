Package: pum
Type: Package
Title: Power Under Multiplicity
Version: 0.1.0
Authors@R: c(
  person("Kristin", "Porter",, "kristin.porter@mdrc.org", c("aut", "cre")),
  person("Luke", "Miratrix",, "luke_miratrix@gse.harvard.edu", c("aut")),
