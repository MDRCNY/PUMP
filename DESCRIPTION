Package: PUMP
Type: Package
Title: Power Under Multiplicity Project
Version: 0.1.0
Authors@R: c(
  person("Kristin", "Porter", "kristin.porter@mdrc.org", c("aut", "cre")),
  person("Luke", "Miratrix", "luke_miratrix@gse.harvard.edu", c("aut", "cre")),
  person("Kristen", "Hunter", "kristenbhunter@gmail.com", c("aut"), comment = c(ORCID = "0000-0002-5678-4620")),
  person("Zarni", "Htet", "zarni.htet@mdrc.org", c("aut"))
